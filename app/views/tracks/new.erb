<h1>Post a New Track</h1>
<hr/>

<% if @track.errors.any? %>
  <div>
    <strong>Sorry, there's something wrong with your post:</strong>
    <ul>
      <% @track.errors.tracks.each do |track| %>
        <li><%= track %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/tracks">
  <div>
    <label>Author:</label>
    <input type="text" name="author" value="<%= @track.author %>">
  </div>
  <div>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @track.title %>">
  </div>
  <div>
    <label>URL:</label>
    <input type="text" name="url" value="<%= @track.url %>">
  </div>
  <div>
    <input type="submit" value="Submit" >
  </div>
</form>